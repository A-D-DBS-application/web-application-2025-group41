<!DOCTYPE html>
<html lang="{{ session.get('lang', 'nl') }}">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mediwaste Solutions</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/homepage.css') }}">
  <link rel="icon" href="{{ url_for('static', filename='favicon.ico') }}">
</head>

<body>
<header>
  <img src="{{ url_for('static', filename='Logo-Mediwaste-Wit.svg') }}" alt="Mediwaste Solutions" class="logo">
  
  <div class="language-selector" style="position:absolute; top:10px; left:10px; display:flex; gap:5px;">
    <a class="btn2-small" href="{{ url_for('main.homepage', lang='nl') }}">NL</a>
    <a class="btn2-small" href="{{ url_for('main.homepage', lang='fr') }}">FR</a>
  </div>

  <div class="buttons">
    <a class="register-btn" href="{{ url_for('main.register') }}">S'inscrire</a>
    <a class="login-btn" href="{{ url_for('main.login') }}">Se connecter</a>
  </div>
</header>

<div id="root"></div>

<script>
const root = document.getElementById('root');

// Titel en beschrijving
const title = document.createElement('h1');
title.textContent = "Économisez sur les coûts de traitement des DASRI";
const description = document.createElement('p');
description.textContent = "Découvrez combien votre organisation peut économiser grâce à une méthode alternative de traitement des DASRI.";
root.appendChild(title);
root.appendChild(description);

// Extra knop naar dashboard
const extraButton = document.createElement('a');
extraButton.className = 'btn2';
extraButton.textContent = "Demandez votre analyse ici";
extraButton.href = "{{ url_for('main.dashboard') }}";
root.appendChild(extraButton);

// Sectie opties
const section = document.createElement('div');
section.className = 'section';
const sectionTitle = document.createElement('h2');
sectionTitle.textContent = "Pourquoi choisir notre solution?";
section.appendChild(sectionTitle);

const optionsContainer = document.createElement('div');
optionsContainer.className = 'options';

const optionsData = [
  { title: "Réduction des coûts", text: "Découvrez des économies directes sur vos coûts actuels de gestion des déchets grâce à notre analyse avancée." },
  { title: "Durable", text: "Plus de fûts WIVA : moins de plastique à usage unique, moins de polypropylène et plus d'importance au recyclage." },
  { title: "Efficace", text: "Moins de transport, moins d'émission : notre système aide à organiser votre gestion des déchets plus efficacement." }
];

optionsData.forEach(opt => {
  const div = document.createElement('div');
  div.className = 'option';

  const img = document.createElement('img');
  img.style.width = '60px';
  img.style.marginBottom = '10px';

  // Dynamisch icoon op basis van titel
  if(opt.title === "Durable") {
    img.src = "/static/greenrecycle.png";
    img.alt = opt.title;
  } else if(opt.title === "Efficace") {
    img.src = "/static/efficiënt.png";
    img.alt = opt.title;
  } else if(opt.title === "Réduction des coûts") {
    img.src = "/static/kostenbesparend.png";
    img.alt = opt.title;
  }

  const h3 = document.createElement('h3');
  h3.textContent = opt.title;
  const p = document.createElement('p');
  p.textContent = opt.text;

  div.appendChild(img);
  div.appendChild(h3);
  div.appendChild(p);
  optionsContainer.appendChild(div);
});

section.appendChild(optionsContainer);
document.body.appendChild(section);

// Footer
const footer = document.createElement('footer');
const leftText = document.createElement('div');
leftText.textContent = "Mediwaste Solutions";
const rightText = document.createElement('div');
rightText.textContent = "© 2025 Mediwaste Solutions BV. Tous droits réservés.";
footer.appendChild(leftText);
footer.appendChild(rightText);
document.body.appendChild(footer);
</script>
</body>
</html>
